---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Main Page">
<!-- ----------  INTRO  ---------- -->
  <section id="about" class="intro">
    <div class="intro__text">
      <h1 class="intro__title">Tygo Offermanns</h1>
      <p class="intro__tagline">I want to become the most creative game dev.</p>
    </div>
    <div class="languages">
      <div class="html"><p>HTML</p></div>
      <div class="css"><p>CSS</p></div>
      <div class="csharp"><p>C#</p></div>
      <div class="python"><p>Python</p></div>
    </div>
  </section>

<!-- ----------  CONTENT  ---------- -->
  <div class="content">  
<!-- ----------  PROJECTS  ---------- -->
    <section id="projects" class="stack">
      <h2><a href="projects">Projects</a></h2>
      <ul class="grid-list">
        <li class="card project">
          <h3>DI.ON.NE</h3>
          <p>een digitale avatar die de vragen van studenten beantwoord.</p>
        </li>
        <li class="card project">
          <h3>LOOI</h3>
          <p>een UI van een interactieve digitale robot.</p>
        </li>
        <li class="card project">
          <h3>Signlator</h3>
          <p>een simulator om gebarentaal te leren door middel van handgebaren.</p>
        </li>
      </ul>
    </section>

<!-- ----------  WERKPROCESSEN  ---------- -->
    <section id="werkprocessen" class="stack">
      <h2><a href="werkprocessen">Werkprocessen</a></h2>
      <ul class="grid-list werkprocessen">
        <li class="card werkproces">
          <h3>Werkproces 1</h3>
          <p>Beoordeling eisen en wensen</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 2</h3>
          <p>Beoordeling ontwerp</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 3</h3>
          <p>Beoordeling realisatie</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 4</h3>
          <p>Beoordeling testen</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 5</h3>
          <p>Beoordeling verbetervoorstellen</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 6</h3>
          <p>Beoordeling overleggen</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 7</h3>
          <p>Beoordeling (deel)oplevering</p>
        </li>
        <li class="card werkproces">
          <h3>Werkproces 8</h3>
          <p>Beoordeling reflecteren</p>
        </li>
      </ul>
    </section>
<!-- ----------  ABOUT  ---------- -->
    <section id="about" class="stack">
      <h2><a href="about">About</a></h2>
      <ul class="grid-list">
        <li class="card about">
          <div id="about-info">
          <p>⚪Tygo Offermanns</p>
          <p>⚪19 jaar</p>
          <p>⚪Software developer</p>
          </div>
          <img src="/public/Tygo Offermanns LinkedIn.jpg" alt="linkedin">
        </li>
      </ul>
    </section>
  </div>
</MainLayout>